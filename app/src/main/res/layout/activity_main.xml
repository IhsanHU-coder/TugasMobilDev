<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_regis_3"
    android:padding="16dp"

    tools:context=".Login"    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:paddingTop="40dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="80dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:text="Log in to your account"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/text_edUsername"
        android:autofillHints="Your Name"
        android:hint="Username"
        android:inputType="text"
        android:drawablePadding="15dp"
        android:background="@drawable/register_edittext_background"
        android:elevation="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/people"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_height="46dp"/>
    <EditText
        android:id="@+id/text_edPassword"
        android:inputType="textPassword"
        android:autofillHints="Password"
        android:hint="Password"
        android:textColor="@color/black"
        android:background="@drawable/register_edittext_background"
        android:elevation="16dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet registered? Sign Up"
        android:paddingRight="24dp"
        android:onClick="register"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:layout_gravity="right"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:gravity="right|center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/btnCreateLogin"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:onClick="LoginAccount"
            android:background="@drawable/register_button2"
            android:contentDescription="btnCreate"
            android:text="Create"
            />

    </LinearLayout>


</LinearLayout>